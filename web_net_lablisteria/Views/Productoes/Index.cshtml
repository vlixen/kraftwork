@model IEnumerable<LaBlisteria.Models.Producto>

@{
    ViewBag.Title = "Productos";
}

<h2>Productos</h2>

<p>
    @if (Session["UsuarioID"] != null)
    {
        @Html.ActionLink("Agregar", "Create")}
    </p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductoTipo.ProductoTipoNombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Modelo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Marca)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductoTipo.ProductoTipoNombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Modelo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Marca)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Precio)
        </td>
        <td>
            @if (Session["UsuarioID"] != null)
            {
                @Html.ActionLink("Editar", "Edit", new { id = item.ProductoID })


            } |


            @Html.ActionLink("Detalles", "Details", new { id = item.ProductoID }) |

            @if (Session["UsuarioID"] != null)
            {
                @Html.ActionLink("Eliminar", "Delete", new { id = item.ProductoID })


            }
        </td>
    </tr>
}

</table>
